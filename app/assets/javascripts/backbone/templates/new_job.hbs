<div class="container">

    <h3 id="new-task-title">New Job</h3>

    <i class="medium material-icons" id="close">clear</i>


  <div class="row">
    <div class="input-field col s12">
      <input type="text" name="title" value="" placeholder="title">
      <label for="title">Enter job title</label>
    </div>
  </div>

  <div class="row">
    <div class="input-field col s12">
      <input type="text" value="" placeholder="Pros" name="pros">
      <label for="pros">Positive aspects of this role</label>
    </div>
  </div>

  <div class="row">
    <div class="input-field col s12">
      <input type="text" value="" placeholder="Cons" name="cons">
      <label for="cons">Negative aspects of this role</label>
    </div>
  </div>

  <div class="row">
    <div class="input-field col s12">
      <input name="applied" type="date" class="datepicker">
      <label>What date did you apply for this job?</label>
    </div>
  </div>

  <div class="row">
    <div class="input-field col s12">
      <input type="text" value="" placeholder="Contact Name" name="contact_name">
      <label for="contact_name">Contact name</label>
    </div>
  </div>

  <div class="row">
    <div class="input-field col s12">
      <input type="text" value="" placeholder="Contact Phone" name="contact_phone">
      <label for="contact_phone">Contact Phone</label>
    </div>
  </div>

  <div class="row">
    <div class="input-field col s12">
      <input type="text" value="" placeholder="Contact Email" name="contact_email">
      <label for="contact_email">Contact Email</label>
    </div>
  </div>

  <div class="row">
    <div class="input-field col s12">
      <input type="text" value="" placeholder="Job Location" name="located">
      <label for="located">Job Location</label>
    </div>
  </div>

  <div class="row">
    <div class="input-field col s12">
      <input type="text" value="" placeholder="Salary" name="salary">
      <label for="salary">Salary</label>
    </div>
  </div>

  <div class="row">
    <div class="input-field col s12">
      <input type="text" value="" placeholder="Notes" name="notes">
      <label for="notes">Notes</label>
    </div>
  </div>

  <button id="submit-new-job" class="btn waves-effect waves-light" type="submit" name="action">Save
  </button>


</div>
