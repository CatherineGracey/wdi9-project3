
<div class="login-container">

  <div class="login-box">
    <form class="text" action="/login" method="post">

      <h3>Login</h3>
          <%= tag(:input, :type => "hidden", :name => request_forgery_protection_token.to_s, :value => form_authenticity_token) %>
          <p id="input-title">Email</p>
          <input type="text" type="submit" name="email" placeholder="email">

          <p id="input-title">Password</p>
          <input type="password" type="submit" name="password" placeholder="password">

      <button>Login</button>

    </form>


   

</div>
